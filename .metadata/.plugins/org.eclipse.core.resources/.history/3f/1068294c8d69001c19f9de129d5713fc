package pobj.emu.memory;

public class RAM implements IMemory{

	private int[] tab;
	private int size;
	
	public RAM(int size,int init) {
		this.size=size;
		tab = new int[size];
		for(int i=0;i<size;i++)
			tab[i]=init;
	}
	@Override
	public int size() {
		// TODO Auto-generated method stub
		return size;
	}

	@Override
	public int read(int addr) {
		// TODO Auto-generated method stub
		return tab[addr];
	}

	@Override
	public void write(int addr, int value) {
		// TODO Auto-generated method stub
		tab[addr] = value;
	}

}
